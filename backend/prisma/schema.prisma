generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  slug     String  @unique
  title    String
  body     String
  author   Teacher @relation(fields: [authorId], references: [id])
  authorId String  @db.ObjectId
}

model Teacher {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  posts Post[]
}

model Student {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
}
